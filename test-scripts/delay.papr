graph flanger {
    @in { @input }
    @out { @out }
    #in {
        #rate = 1.0
        #amount = 1.0
        #dry_wet = 0.5
    }
    #out {}
    ~ {
        create d: delay;
        create l: sinelfo;
        create dry_wet_c2a: c2a;
        
        dry_wet_c2a.#e <- #dry_wet;

        l.#freq <- #rate;
        l.#amp <- #1.0;

        d.@input <- @input;
        d.#delay <- (((l.#out + #1.0) / #2.0) * #amount);
        @out <- ((d.@out * (@1.0 - dry_wet_c2a.@a)) + (@input * dry_wet_c2a.@a));
    }
}

graph main {
    @in {}
    @out { @dac0 }
    #in { 
        #period(0.1 : 8) = 1.0
        #width(0.001 : 0.999) = 0.5

        #rate(0.001 : 5.0) = 1.0
        #amount(0.0 : 0.05) = 0.001
        #dry_wet(0.0 : 1.0) = 0.5
    }
    #out { #val }
    ~ {
        create s: sawosc;
        create fl: flanger;
        create mf: m2f;
        create ni: notein;

        mf.#m <- ni.#note0;
        s.#freq <- mf.#f;
        s.#amp <- ni.#vel0;

        fl.#rate <- #rate;
        fl.#amount <- #amount;
        fl.#dry_wet <- #dry_wet;

        create ck: clock;
        ck.#period <- #period;
        ck.#width <- #width;

        let @final <- (s.@out * ck.@out);

        fl.@input <- @final;
        @dac0 <- fl.@out;
    }
}